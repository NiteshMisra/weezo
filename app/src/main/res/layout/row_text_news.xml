<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_5dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_play_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:gravity="top"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="@dimen/dimen_5dp">
                       <FrameLayout
                           android:layout_width="130dp"
                           android:layout_height="90dp">
                           <ImageView
                               android:fontFamily="@font/roboto_regular"
                               android:id="@+id/img_preview"
                               android:layout_width="130dp"
                               android:layout_height="90dp"
                               android:adjustViewBounds="true"
                               android:scaleType="fitXY"
                               android:src="@drawable/ic_sp_app_icon" />
                           <ProgressBar

                               android:id="@+id/progress_bar"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center" />
                           <ImageView
                               android:id="@+id/img_play"
                               android:layout_width="32dp"
                               android:layout_height="32dp"
                               android:layout_gravity="center"
                               android:elevation="@dimen/dimen_5dp"
                               android:scaleType="fitXY"
                               android:src="@drawable/ic_play_circle"
                               app:tint="@color/colorAccent"
                               android:visibility="gone" />
                       </FrameLayout>

                    </androidx.cardview.widget.CardView>




                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:orientation="vertical">


                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:id="@+id/tv_description"
                        style="@style/tv_medium_text"
                        android:layout_margin="2dp"
                        android:maxLines="2"
                        android:gravity="center_vertical"
                        android:text="aaa"
                        android:ellipsize="end"
                      />

                    <TextView
                        android:id="@+id/tv_size"
                        style="@style/tv_medium_text"
                        android:layout_margin="2dp"
                        android:gravity="center_vertical"
                        android:maxWidth="100dp"
                        android:text="size"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="left">

                        <LinearLayout
                            android:padding="@dimen/dimen_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_view"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:adjustViewBounds="true"
                                android:elevation="@dimen/dimen_5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_view" />

                            <TextView
                                android:fontFamily="@font/roboto_regular"
                                android:id="@+id/tv_total_views"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:paddingRight="@dimen/dimen_5dp"
                                android:textSize="12sp"
                                android:text="0" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:gravity="center"
                            android:padding="@dimen/dimen_8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_like"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:adjustViewBounds="true"
                                android:elevation="@dimen/dimen_5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_thumb_not_selected" />

                            <TextView
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"
                                android:id="@+id/tv_total_likes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:paddingRight="@dimen/dimen_5dp"
                                android:text="0" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:padding="@dimen/dimen_8dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_share"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:adjustViewBounds="true"
                                android:elevation="@dimen/dimen_5dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/img_share" />

                            <TextView
                                android:visibility="gone"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"
                                android:id="@+id/tv_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:paddingRight="@dimen/dimen_5dp"
                                android:text="share" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView

                    android:layout_below="@id/cardview"
                    android:paddingLeft="30dp"
                    android:id="@+id/tv_date_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="date"
                    android:textColor="@color/colorblack" />
                <TextView
                    android:background="@drawable/bg_read_more"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:id="@+id/tv_click_toread_more"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/read_more" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
